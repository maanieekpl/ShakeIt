@model ShakeIt.Models.DrinkHelper
@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h4>Drink</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DHDrink.DrinkId" />
                <div class="form-group">
                    <label asp-for="DHDrink.DrinkName" class="control-label"></label>
                    <input asp-for="DHDrink.DrinkName" class="form-control" />
                    <span asp-validation-for="DHDrink.DrinkName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DHDrink.DrinkType" class="control-label"></label>
                    <input asp-for="DHDrink.DrinkType" class="form-control" />
                    <span asp-validation-for="DHDrink.DrinkType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        @await Html.PartialAsync("Ingridients.cshtml")
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>

